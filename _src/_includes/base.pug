---
---

-
  var site = {
    title: "어즐 블로그",
  }

doctype html
html(lang="ko" data-theme="light" class="preload")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{page.title}::#{site.title}
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reset-css@5.0.2/reset.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/d2coding@1.3.2/d2coding-full.min.css")
    link(rel="stylesheet" href="/main.css")
  body
    .layout
      .header-wrap
        .container
          header
            .items
              h1 #{site.title} ::
              a(href="/") 🏠첫 화면
              //- each item in site.cats
              //-   .item
              //-     a(href=`${item.path}`) #{item.title}
            .switches
              label.switch-theme
                .left 🌞
                .center
                  .bar
                    .btn
                .right 🌚
      .article-wrap
        .container
          article !{content}
      .footer-wrap
        .container
          footer
            .msg
              div Designed by 어즐,
              div Powered by Github Pages
    script(src="/main.js")