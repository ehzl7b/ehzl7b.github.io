---
const site = {
  name: `Tezyns'Blog`
}
---

<!doctype html>
<html lang="ko" data-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ site.name }</title>
    <link rel="stylesheet" href="https://hangeul.pstatic.net/hangeul_static/css/nanum-gothic-coding.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reset-css@5.0.2/reset.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/open-color@1.9.1/open-color.min.css">
  </head>
  <body class="
    fixed top-0 right-0 bottom-0 left-0
  ">
    <div class="
      fixed top-[1rem] right-[1rem] z-[9999]
      h-[1.5rem] w-[1.5rem]
      font-size-[1.5rem]
      cursor-pointer overflow-hidden
    ">
      <label class="
        relative h-full w-full
        block
      ">
        <input type="checkbox" class="
          h-0 w-0 opacity-0
          [&:checked+div]-rotate-45
        ">
        <div class="menu-btn-icon"></div>
      </label>
    </div>
    <div class="dummy">
      <div class="bg-left"></div>
      <div class="bg-right"></div>
    </div>
    <div class="sidebar">
      <header>
        <h1 class="site-name"><a href="#">{ site.name }</a></h1>
          <label class="theme-btn">
          <div class="theme-left"></div>
          <div class="wrapper">
            <input type="checkbox">
            <div class="theme-switch"></div>
          </div>
          <div class="theme-right"></div>
        </label>
      </header>
      <nav>
        <div class="line"></div>
        <ul>
          <li class="item"><a href="#">Develope</a></li>
          <li class="item"><a href="#">MS Office Tips</a></li>
        </ul>
      </nav>
      <footer>
        <div class="line"></div>
        <div class="footer-msg">This blog is designed by Tezyns.</div>
      </footer>
    </div>
    <div class="mainview">
      <article>
        <!-- page goes here -->
      </article>
    </div>
  </body>
</html>

<style lang="scss" is:global>
  * {
  -webkit-tap-highlight-color: transparent; box-sizing: border-box;
  }
  body, div, header, main, footer, section {
    -ms-overflow-style: none; scrollbar-width: none;
    &::-webkit-scrollbar {
      display: none;
    }
  }
  body, pre, code, kbd, samp {
    font: 400 16px Hack,NanumSquareNeo,monospace; line-height: 1.5;
  }
  a, a:link, a:visited, a:hover, a:active {
    text-decoration: none; color: var(--fg-a); border-bottom: 1px solid;
  }
</style>